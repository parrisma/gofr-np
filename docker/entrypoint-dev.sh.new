#!/bin/bash
set -e

PROJECT_DIR="/home/gofr-np/devroot/gofr-np"
COMMON_DIR="/home/gofr-np/devroot/gofr-common"
VENV_DIR="$PROJECT_DIR/.venv"

echo "======================================================================="
echo "GOFR-NP Container Entrypoint"
echo "======================================================================="

# Fix data directory permissions if mounted as volume
if [ -d "$PROJECT_DIR/data" ]; then
    if [ ! -w "$PROJECT_DIR/data" ]; then
        echo "Fixing permissions for $PROJECT_DIR/data..."
        sudo chown -R gofr-np:gofr-np "$PROJECT_DIR/data" 2>/dev/null || \
            echo "Warning: Could not fix permissions. Run container with --user $(id -u):$(id -g)"
    fi
fi

# Create subdirectories if they don't exist
mkdir -p "$PROJECT_DIR/data/storage" "$PROJECT_DIR/data/auth"
mkdir -p "$PROJECT_DIR/logs"

# Create virtual environment if it doesn't exist or is corrupted
if [ ! -f "$VENV_DIR/bin/python" ] || [ ! -x "$VENV_DIR/bin/python" ]; then
    echo "Creating Python virtual environment..."
    rm -rf "$VENV_DIR" 2>/dev/null || true
    uv venv "$VENV_DIR" --python=python3.11
    echo "Virtual environment created at $VENV_DIR"
fi

# Activate virtual environment
export VIRTUAL_ENV="$VENV_DIR"
export PATH="$VENV_DIR/bin:$PATH"

# Install gofr-common if available (mounted from host)
if [ -d "$COMMON_DIR" ] && [ -f "$COMMON_DIR/pyproject.toml" ]; then
    echo "Installing gofr-common (editable)..."
    cd "$COMMON_DIR"
    uv pip install -e . || echo "Warning: Could not install gofr-common"
fi

# Install project dependencies
cd "$PROJECT_DIR"
if [ -f "$PROJECT_DIR/pyproject.toml" ]; then
    echo "Installing project dependencies from pyproject.toml..."
    uv pip install -e ".[dev]" || echo "Warning: Could not install project dependencies"
elif [ -f "$PROJECT_DIR/requirements.txt" ]; then
    echo "Installing dependencies from requirements.txt..."
    uv pip install -r requirements.txt || echo "Warning: Could not install dependencies"
fi

echo ""
echo "Environment ready. Installed packages:"
uv pip list 2>/dev/null | head -20 || true

echo ""
echo "======================================================================="
echo "Entrypoint complete. Executing: $@"
echo "======================================================================="

# Execute the main command
exec "$@"
